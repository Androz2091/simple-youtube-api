{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "jest"
    ],
    "extends": ["eslint:recommended", "plugin:jest/recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": "error",
        "no-unused-vars": "warn",
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ]
    },
    "overrides": [
        {
            "files": ["test/**/*.js"],
            "parserOptions": {
                "ecmaVersion": 2017
            },
            "env": {
                "jest": true
            }
        }
    ]
}
